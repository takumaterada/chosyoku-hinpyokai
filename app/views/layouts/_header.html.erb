<header>
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light">
      <nav class="navbar-brand">
      <%= link_to root_path, :style => "color: #000000;", class:"navbar-brand" do %>
        <%= image_tag asset_path('medamayaki-icon.jpg'), size: "80x80" %>
      <% end %>
      </nav>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "投稿フォーム", new_post_path, class: 'nav-link text-dark' %>
          </li>
          <li>
            <%= link_to "投稿一覧", posts_path, class: 'nav-link text-dark' %>
          </li>
            <%= link_to "マイページ", user_path(current_user), class: 'nav-link text-dark' %>
          <li>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
          </li>
          <li>
            <% if current_user.is_admin == true %>
              <%= link_to "ジャンル編集", genres_path, class: 'nav-link text-dark' %>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to "About", homes_about_path, class: 'nav-link text-dark' %>
          </li>
          <li>
            <%= link_to "投稿一覧", posts_path, class: 'nav-link text-dark' %>
          </li>
          <li>
            <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
          </li>
          <li>
            <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
          </li>
        <% end %>
        <%= form_with url: search_path, local: true, method: :get, class: "form-inline justify-content-end" do |f| %>
          <%= f.text_field :name, placeholder: "検索ワード", class: "form-control" %>
          <%= f.submit "検索", class: "btn btn-secondary" %>
        <% end %>
  </div>
  </nav>
</header>