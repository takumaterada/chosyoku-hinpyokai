<%= render "layouts/header" %>
<div class='container'>
  <div class='row justify-content-center'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

    <div class="card bg-light">
      <article class="card-body mx-auto" style="max-width: 400px;">
      <h4 class="card-title mt-3 text-center">会員登録</h4><br>

    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>


      <div class="form-group input-group">
		    <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-user"></i></span>
          <%= f.text_field :name, autofocus: true, placeholder: "Full name", autocomplete: "name", class: "form-control" %>
        </div>
      </div>

      <div class="form-group input-group">
		    <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-envelope"></i></span>
        <%= f.email_field :email, placeholder: "E-mail", autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group input-group">
		    <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-lock"></i></span>
        <% if @minimum_password_length %>
        <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
        <% end %><br />
        <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group input-group">
		    <div class="input-group-prepend">
          <span class="input-group-text"><i class="fa fa-lock"></i></span>
        <%= f.password_field :password_confirmation, placeholder: "Password", autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-primary btn-block" %>
      </div>
    </div>
    <% end %>
      </article>
    </div>


    </div>
  </div>
</div>